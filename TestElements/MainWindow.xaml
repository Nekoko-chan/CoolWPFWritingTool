<Window x:Class="TestElements.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestElements" AllowsTransparency="True" Background="Transparent" WindowStyle="None"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="Width" Height="500">
    <Grid>
          <local:DesignHelper Margin="0,15,0,0"></local:DesignHelper>
          <Thumb VerticalAlignment="Top" Height="45" DragDelta="MoveWindow" Cursor="Hand">
              <Thumb.Template>
                  <ControlTemplate>
                      <Border Background="#01FFFFFF"></Border>
                  </ControlTemplate>
              </Thumb.Template>
          </Thumb>
    </Grid>
</Window>



